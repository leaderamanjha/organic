<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="productVM" type="com.amankumarsapplication.app.modules.product.data.viewmodel.ProductVM"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearColumnback"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/_20pxh"
        android:layout_marginStart="@dimen/_19pxh"
        android:layout_marginTop="@dimen/_10pxv"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylegray_200">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_7pxh"
            android:layout_marginStart="@dimen/_3pxh"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linearRow"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <LinearLayout android:id="@+id/linearRowback"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4pxv"
                    android:layout_weight="0.38"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageBack"
                        android:layout_height="@dimen/_24pxh"
                        android:layout_marginBottom="@dimen/_5pxv"
                        android:layout_marginTop="@dimen/_4pxv"
                        android:layout_width="@dimen/_27pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_4pxh}"
                        imageRes="@{@drawable/img_back}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_back"/>
                    <ImageView android:id="@+id/imageHome"
                        android:layout_height="@dimen/_33pxh"
                        android:layout_marginStart="@dimen/_4pxh"
                        android:layout_width="@dimen/_25pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_home"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_home"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/linearRowfavorite"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2pxv"
                    android:layout_marginStart="@dimen/_192pxh"
                    android:layout_weight="0.62"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageFavorite"
                        android:layout_height="@dimen/_19pxh"
                        android:layout_marginBottom="@dimen/_7pxv"
                        android:layout_marginTop="@dimen/_9pxv"
                        android:layout_width="@dimen/_30pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_favorite"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_favorite"/>
                    <ImageView android:id="@+id/imageFastCart"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_marginBottom="@dimen/_7pxv"
                        android:layout_marginStart="@dimen/_5pxh"
                        android:layout_marginTop="@dimen/_8pxv"
                        android:layout_width="@dimen/_20pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_fastcart"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_fastcart"/>
                    <ImageView android:id="@+id/imageMenu"
                        android:layout_height="@dimen/_35pxh"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_width="@dimen/_28pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_menu"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_menu"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.core.widget.NestedScrollView
            android:clipToPadding="false" android:fillViewport="true"
            android:id="@+id/scrollViewScrollview"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:gravity="center_horizontal"
                android:id="@+id/linearColumnrectangleeighteen"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15pxv"
                android:layout_width="match_parent" android:orientation="vertical">
                <FrameLayout android:gravity="start"
                    android:id="@+id/frameStackrectangleeighteen"
                    android:layout_height="@dimen/_275pxv"
                    android:layout_width="match_parent" style="@style/groupStylewhite_A700cornerRadius">
                    <ImageView android:id="@+id/imageRectangleEighteen"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/_153pxh"
                        android:layout_marginHorizontal="@dimen/_40pxh"
                        android:layout_marginVertical="@dimen/_40pxv"
                        android:layout_width="@dimen/_222pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_27pxh}"
                        imageRes="@{@drawable/img_rectangle18}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle18"/>
                </FrameLayout>
                <FrameLayout android:id="@+id/frameStackabout"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="@dimen/_180pxv"
                    android:layout_marginEnd="@dimen/_7pxh"
                    android:layout_marginStart="@dimen/_6pxh"
                    android:layout_marginTop="@dimen/_19pxv" android:layout_width="@dimen/_338pxh">
                    <LinearLayout
                        android:id="@+id/linearColumnmeasurement"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_width="match_parent" android:orientation="vertical">
                        <FrameLayout
                            android:id="@+id/frameStackmeasurement"
                            android:layout_height="@dimen/_60pxv"
                            android:layout_marginEnd="@dimen/_10pxh" android:layout_width="@dimen/_171pxh">
                            <TextView android:gravity="top|start"
                                android:id="@+id/txtMeasurement"
                                android:layout_gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2pxh"
                                android:layout_width="match_parent"
                                android:lineSpacingExtra="@dimen/_4pxh"
                                android:text="@{productVM.productModel.txtMeasurement}"
                                style="@style/txtPoppinsbold14" tools:text="@string/msg_milk_medium_fat2"/>
                            <ImageView android:id="@+id/imageRupee"
                                android:layout_gravity="bottom|start"
                                android:layout_height="@dimen/_17pxh"
                                android:layout_marginBottom="@dimen/_17pxv"
                                android:layout_marginEnd="@dimen/_10pxh"
                                android:layout_marginTop="@dimen/_17pxv"
                                android:layout_width="@dimen/_21pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_rupee"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_rupee"/>
                        </FrameLayout>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtAbout"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_10pxh"
                            android:layout_marginStart="@dimen/_2pxh"
                            android:layout_marginTop="@dimen/_29pxv"
                            android:layout_width="wrap_content"
                            android:lineSpacingExtra="@dimen/_10pxh"
                            android:singleLine="true"
                            android:text="@{productVM.productModel.txtAbout}"
                            style="@style/txtPoppinsbold20" tools:text="@string/lbl_about"/>
                        <TextView android:gravity="center_horizontal"
                            android:id="@+id/txtThemilkproduc"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2pxh"
                            android:layout_marginTop="@dimen/_4pxv"
                            android:layout_width="match_parent"
                            android:lineSpacingExtra="@dimen/_4pxh"
                            android:text="@{productVM.productModel.txtThemilkproduc}"
                            style="@style/txtPoppinsregular14" tools:text="@string/msg_the_milk_produc"/>
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/frameStackrectanglenineteen"
                        android:layout_gravity="top|end"
                        android:layout_height="@dimen/_18pxv"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:layout_marginStart="@dimen/_10pxh"
                        android:layout_marginTop="@dimen/_4pxv" android:layout_width="@dimen/_95pxh">
                        <View
                            android:background="@drawable/rectangle_bg_green_700_radius_9"
                            android:id="@+id/viewRectangleNineteen"
                            android:layout_gravity="start"
                            android:layout_height="@dimen/_18pxv"
                            android:layout_marginTop="@dimen/_1pxv" android:layout_width="@dimen/_95pxh"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtADD"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_marginEnd="@dimen/_35pxh"
                            android:layout_marginStart="@dimen/_34pxh"
                            android:layout_width="wrap_content"
                            android:lineSpacingExtra="@dimen/_6pxh"
                            android:singleLine="true"
                            android:text="@{productVM.productModel.txtADD}"
                            style="@style/txtPoppinsmedium12_2" tools:text="@string/lbl_add"/>
                    </FrameLayout>
                </FrameLayout>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtBenefits"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_259pxh"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_marginTop="@dimen/_21pxv"
                    android:layout_width="wrap_content"
                    android:lineSpacingExtra="@dimen/_10pxh"
                    android:singleLine="true"
                    android:text="@{productVM.productModel.txtBenefits}"
                    style="@style/txtPoppinsbold20" tools:text="@string/lbl_benefits"/>
                <LinearLayout android:id="@+id/linearRowrectangletwenty"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_17pxh"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_marginTop="@dimen/_17pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageImageOne"
                        android:layout_height="@dimen/_100pxh"
                        android:layout_width="@dimen/_100pxh"
                        android:scaleType="centerCrop"
                        circular="@{true}"
                        imageRes="@{@drawable/img_image1}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_image1"/>
                    <ImageView android:id="@+id/imageRectangleTwenty"
                        android:layout_height="@dimen/_91pxh"
                        android:layout_marginBottom="@dimen/_9pxv"
                        android:layout_marginStart="@dimen/_35pxh"
                        android:layout_width="@dimen/_78pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_50pxh}"
                        imageRes="@{@drawable/img_rectangle20}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle20"/>
                    <ImageView android:id="@+id/imageRectangleTwentyOne"
                        android:layout_height="@dimen/_100pxh"
                        android:layout_marginStart="@dimen/_24pxh"
                        android:layout_width="@dimen/_88pxh"
                        android:scaleType="fitXY"
                        cornerRadius="@{@dimen/_50pxh}"
                        imageRes="@{@drawable/img_rectangle20_100x88}"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle20_100x88"/>
                </LinearLayout>
                <TextView android:ellipsize="end"
                    android:gravity="start"
                    android:id="@+id/txtRelatedProduct"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_167pxh"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_marginTop="@dimen/_30pxv"
                    android:layout_width="match_parent"
                    android:lineSpacingExtra="@dimen/_10pxh"
                    android:singleLine="true"
                    android:text="@{productVM.productModel.txtRelatedProduct}"
                    style="@style/txtPoppinsbold20" tools:text="@string/msg_related_product"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:gravity="center_horizontal"
                    android:id="@+id/recyclerProduct"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5pxh"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_marginTop="@dimen/_7pxv"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    itemSpace="@{@dimen/_25pxh}" tools:itemCount="2" tools:listitem="@layout/row_product"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
